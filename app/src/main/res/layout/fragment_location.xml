<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue3"
    android:orientation="vertical"
    tools:context="bartburg.nl.backbaseweather.view.location.LocationFragment">

    <RelativeLayout
        android:id="@+id/city_header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:padding="20dp">

        <TextView
            android:id="@+id/city_name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue2"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:text="Den Bosch"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/bookmarked_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:alpha="0.3"
            app:srcCompat="@drawable/bookmarks" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/city_weather_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/unit_system"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="C"
            android:textColor="@color/white"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/degrees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/unit_system"
            android:text="Â°"
            android:textColor="@color/white"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/degrees"
            android:text="36"
            android:textColor="@color/white"
            android:textSize="80sp" />

        <ImageView
            android:id="@+id/weather_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/temperature"
            android:layout_alignTop="@id/temperature"
            android:layout_toLeftOf="@id/temperature"
            app:srcCompat="@drawable/sun" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/location_forecast_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

</LinearLayout>
